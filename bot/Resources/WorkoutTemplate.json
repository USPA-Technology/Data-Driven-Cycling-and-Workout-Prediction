{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Predict Workout"
    },
    {
      "type": "Input.Text",
      "value": "Istanbul",
      "id": "cityInput"
    },
    {
      "type": "Input.Date",
      "id": "dateInput"
    },
    {
      "type": "Input.Time",
      "id": "timeInput",
      "value": "08:00"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Predict",
      "id": "predictButton",
      "style": "positive",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "Predict workout display",
          "text": "Predict workout text",
          "value": "{\"cityInput\": \"${cityInput}\", \"dateInput\": \"${dateInput}\", \"timeInput\": \"${timeInput}\"}"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}
